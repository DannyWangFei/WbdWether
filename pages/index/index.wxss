.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.weather{
  width: 100%;
  text-align: left;
  line-height: 40px;
  margin-left: 30px;
  margin-top: 40px;
  color: rgb(0, 2, 5);
  font-weight: 600;
  height: 50%;
}
.mask{
  width:100%;
  height:100%;
